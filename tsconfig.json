{
    "compilerOptions": {
        "lib": ["es6", "dom", "es2017"],
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./lib/"
    },
    "include": ["src/**/*"]
}